generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Author {
  id                Int     @id @default(autoincrement())
  nome              String
  imageUrl          String
  biography         String
  historical_period String?
  curiosities       String

  books Book[]

  @@map("authors")
}

model Book {
  id                Int    @id @default(autoincrement())
  title             String @unique
  imageUrl          String
  year_publication  Int
  summary           String
  historical_period String
  curiosities       String
  characters        String?

  authorId Int
  author   Author @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("books")
}